# .env.example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/grocery_planner

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0

# LLM Configuration (from your existing setup)
LLM_API_URL=http://host.docker.internal:11434/api/generate
DEFAULT_MODEL=qwen2.5-coder:14b

# Application Settings
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
DEBUG=false

# Telemetry & Monitoring
TELEMETRY_ENABLED=true
TELEMETRY_METRICS_PORT=8001
TELEMETRY_CONSOLE_EXPORT=false

# External APIs (to be configured)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Email Configuration (for notifications)
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=your_email@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=true
MAIL_SSL_TLS=false

# Security
SECRET_KEY=your_secret_key_here_generate_a_long_random_string

# Scraping Configuration
MAX_SCRAPE_WORKERS=3
SCRAPE_DELAY_MIN=1
SCRAPE_DELAY_MAX=3
USER_AGENT=GroceryAI-Bot/1.0

# New Scraping System Configuration
FLIPP_RATE_LIMIT_DELAY=0.5
SCRAPING_TIMEOUT=30
SELENIUM_HEADLESS=true
MAX_SCRAPING_RETRIES=3
ENABLE_FLIPP_API=true
ENABLE_SELENIUM_FALLBACK=true
ENABLE_PDF_FALLBACK=false
ENABLE_VISION_FALLBACK=false

# Job Configuration
CELERY_RESULT_EXPIRES=3600
MAX_RETRIES=3

# Development Settings
RELOAD=false
PYTEST_CURRENT_TEST=false